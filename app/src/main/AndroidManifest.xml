<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ovez.booklibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookLibrary">
        <activity
            android:name=".WebsiteActivity"
            android:exported="false"
            android:label="@string/activity_website"/>
        <activity
            android:name=".CurrentlyReadingBookActivity"
            android:exported="false"
            android:label="@string/activity_currently_reading_book"/>
        <activity
            android:name=".FavouriteBookActivity"
            android:exported="false"
            android:label="@string/activity_favourite_book"/>
        <activity
            android:name=".WantToReadActivity"
            android:exported="false"
            android:label="@string/activity_want_to_read"/>
        <activity
            android:name=".AlreadyReadBookActivity"
            android:exported="false"
            android:label="@string/activity_already_read_book"/>
        <activity
            android:name=".BookActivity"
            android:exported="false"
            android:label="@string/activity_book"/>
        <activity
            android:name=".AllBooksActivity"
            android:exported="false"
            android:label="@string/activity_all_books"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>